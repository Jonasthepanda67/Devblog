@page "{id:guid}/{type}"
@using Devblog_Library.Models
@model Devblog.Pages.Admin.EditModel
@{
}

<body>
    @if (Model.Type == "Post")
    {
        <h2 class="text-center">Edit Post</h2>
        <div class="container mt-4 d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <p class="text-center">Date Created: @Model.Post.Date.ToShortDateString()</p>

                <div class="form-group mb-3">
                    <label>Title: </label>
                    <input class="form-control" value="@Model.Post.Title" />
                </div>

                <div class="form-group mb-3">
                    <label>Reference: </label>
                    <input class="form-control" value="@Model.Post.Reference" />
                </div>

                @if (Model.Post is BlogPost blogPost)
                {
                    <div class="form-group mb-3">
                        <label>Weblog: </label>
                        <input class="form-control" value="@blogPost.Weblog" />
                    </div>
                }
                else if (Model.Post is Review review)
                {
                    <div class="form-group mb-3">
                        <label>Pros: </label>
                        <input class="form-control" value="@review.Pros" />
                    </div>

                    <div class="form-group mb-3">
                        <label>Cons: </label>
                        <input class="form-control" value="@review.Cons" />

                    </div>

                    <div class="form-group mb-3">
                        <label>Rating: </label>
                        <input class="form-control" value="@review.Stars" />
                    </div>
                }
                else if (Model.Post is Project project)
                {
                    <div class="form-group mb-3">
                        <label>Description: </label>
                        <input class="form-control" value="@project.Description" />
                    </div>
                    <div class="text-center">
                        <img src="@project.Image" alt="Project image" class="img-fluid" />
                    </div>
                }
            </div>
        </div>
    }
    else if (Model.Type == "Tag")
    {
        <h2 class="text-center">Edit Tag</h2>
        <div class="container mt-4 d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label>Title: </label>
                    <input class="form-control" value="@Model.Tag.Name" />
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-page="/Admin/Index">Back to Admin Panel</a>
    </div>
</body>

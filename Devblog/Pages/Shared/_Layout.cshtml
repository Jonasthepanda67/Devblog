<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Devblog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Layout.cshtml.css">
</head>
<body>
    <header>
        <nav class="navbar sticky-top bg-body-tertiary">
            <div class="container-fluid justify-content-center">
                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                <a class="nav-link" asp-area="" asp-page="/Portfolio">Portfolio</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link" asp-page="/Admin/Index">Admin Panel</a>
                    <a class="nav-link" asp-page="/Admin/Accounts">Account Administration</a>
                    <form method="post" asp-page="/Logout" class="d-inline">
                        <button type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                }
                else
                {
                    <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top sticky-bottom footer text-muted">
        <div class="container">
            <h6 class="footer-text">&copy; 2024 - Devblog/Portfolio</h6>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar {
        background-color: #7A7A7A;
        margin-bottom: 20px;
    }

    .nav-link {
        background-color: #2C5218;
        color: #ffffff;
        text-align: center;
        font-size: 18px;
        border: 1px solid black;
        border-radius: 8px;
        margin-left: 10px;
        margin-right: 10px;
    }

    .footer {
        background-color: #7A7A7A;
        margin-top: 20px;
    }

    .footer-text {
        padding: 10px;
        color: #ffffff;
    }
</style>
@page
@using Devblog_Library.Models
@model Devblog.Pages.PortfolioModel
@{
    ViewData["Title"] = "Portfolio";
}

<div class="portfolio-container">
    <h2 class="portfolio-title">My Projects</h2>
    <div class="project-grid">
        @foreach (Project project in Model.Projects)
        {
            <div class="project-card">
                <div class="project-info">
                    <h3>@project.Title</h3>
                    @{
                        var formattedDate = project.Date.ToString("MMMM dd, yyyy");
                        var capitalizedDate = char.ToUpper(formattedDate[0]) + formattedDate.Substring(1);
                    }
                    <p class="project-date">Published on: @capitalizedDate</p>

                    <!-- Project Image -->
                    <img src="@project.Image" alt="@project.Title Image" class="project-image" />
                    
                    <!-- Description -->
                    <div class="project-description">
                        <h6 style="font-weight: bold;">Description :</h6>
                        <p>@project.Description</p>
                    </div>

                    <!-- Display Tags -->
                    <div class="project-tags">
                        <strong>Tags:</strong>
                        @foreach (Tag tag in project.Tags)
                        {
                            <button type="button" class="btn tag" disabled>@tag.Name</button>
                        }
                    </div>

                    <!-- Project Link -->
                    <a href="@project.Reference" class="project-link" target="_blank">View Project</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .portfolio-container {
        width: 90%;
        margin: 0 auto;
        padding: 30px 0;
    }

    [data-bs-theme="light"] .portfolio-title {
        text-align: center;
        font-weight: bold;
        color: #333;
        margin-bottom: 40px;
        font-size: 2.5em;
    }

    [data-bs-theme="dark"] .portfolio-title {
        text-align: center;
        font-weight: bold;
        color: white;
        margin-bottom: 40px;
        font-size: 2.5em;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    [data-bs-theme="light"] .project-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    [data-bs-theme="dark"] .project-card {
        background-color: #40464C;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .project-info {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    [data-bs-theme="light"] .project-info h3 {
        margin: 0;
        font-weight: bold;
        color: #d0b232;
        font-size: 1.5em;
    }

    [data-bs-theme="dark"] .project-info h3 {
        margin: 0;
        font-weight: bold;
        color: #d0b232;
        font-size: 1.5em;
    }

    .project-date {
        font-size: 0.9em;
        color: #777;
        margin: 10px 0;
    }

    .project-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        margin: 10px 0;
        border-radius: 5px;
    }

    [data-bs-theme="light"] .project-description {
        margin-bottom: 10px;
        color: #616161;
    }

    [data-bs-theme="dark"] .project-description {
        margin-bottom: 10px;
        color: white;
    }

    .project-description h6 {
        color: #007bff;
        margin-bottom: 5px;
    }

    .project-tags {
        margin-bottom: 15px;
    }

    .tag {
        background-color: #e7f3ff;
        color: #0056b3;
        padding: 5px 10px;
        border-radius: 5px;
        margin-right: 5px;
        font-size: 0.85em;
        border: none;
    }

    .project-link {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
    }

    .project-link:hover {
        text-decoration: underline;
    }
</style>
